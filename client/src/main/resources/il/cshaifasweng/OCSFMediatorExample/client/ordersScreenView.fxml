<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="il.cshaifasweng.OCSFMediatorExample.client.OrdersScreenController"
      spacing="20"
      alignment="TOP_CENTER"
      style="-fx-background-color: #fafafa; -fx-padding: 30;">

    <!-- Header Section -->
    <VBox alignment="CENTER" spacing="5">
        <Label text="Your Orders"
               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
        <Label text="Track and review your order history"
               style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" />
    </VBox>

    <!-- Content Section -->
    <StackPane prefWidth="900" prefHeight="600">
        <!-- No Orders Message -->
        <VBox fx:id="noOrdersContainer" alignment="CENTER" spacing="15" visible="false">
            <Label fx:id="noOrdersLabel"
                   text="No orders found."
                   style="-fx-font-size: 18px; -fx-text-fill: #95a5a6;" />
            <Label text="Your orders will appear here once you make a purchase"
                   style="-fx-font-size: 14px; -fx-text-fill: #bdc3c7;" />
        </VBox>

        <!-- Orders List -->
        <VBox alignment="TOP_CENTER">
            <ListView fx:id="ordersListView"
                      prefWidth="850"
                      prefHeight="580"
                      style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-focus-color: transparent; -fx-faint-focus-color: transparent; -fx-cell-size: 120;">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10" />
                </padding>
            </ListView>
        </VBox>
    </StackPane>

</VBox>