<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="rootPane" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.ProductCardController">
    <children>
        <VBox fx:id="displayVBox" alignment="CENTER_LEFT" spacing="8" style="-fx-background-color: #ffffff; -fx-border-color: #dddddd; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
            <padding>
                <Insets bottom="15" left="15" right="15" top="15" />
            </padding>
            <children>
                <ImageView fx:id="productImageView" fitHeight="160.0" fitWidth="220.0" pickOnBounds="true" preserveRatio="false" />
                <Label fx:id="nameLabel" text="Product Name">
                    <font>
                        <Font name="Bell MT Bold" size="20.0" />
                    </font>
                </Label>
                <Label fx:id="typeLabel" style="-fx-text-fill: #555555;" text="Type: Flower Arrangement" />
                <HBox alignment="CENTER_LEFT" spacing="5">
                    <children>
                        <Label style="-fx-text-fill: #555555;" text="Color:" />
                        <Rectangle fx:id="colorDisplayRect" arcHeight="5.0" arcWidth="5.0" height="15.0" width="15.0" stroke="BLACK" strokeType="INSIDE" />
                    </children>
                </HBox>
                <HBox fx:id="priceBox" alignment="CENTER_LEFT" spacing="10" />
                <VBox VBox.vgrow="ALWAYS" />
                <HBox fx:id="buttonBox" alignment="CENTER" spacing="10" />
            </children>
        </VBox>

        <VBox fx:id="editVBox" alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #f9f9f9; -fx-border-color: #3498db; -fx-border-width: 2; -fx-border-radius: 8; -fx-background-radius: 8;" visible="false">
            <padding>
                <Insets bottom="15" left="15" right="15" top="15" />
            </padding>
            <children>
                <Label text="Edit Product">
                    <font><Font name="Bell MT Bold" size="22.0" /></font>
                </Label>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label minWidth="80.0" text="Name:" />
                    <TextField fx:id="nameTextField" HBox.hgrow="ALWAYS" />
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label minWidth="80.0" text="Type:" />
                    <TextField fx:id="typeTextField" HBox.hgrow="ALWAYS" />
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label minWidth="80.0" text="Price ($):" />
                    <TextField fx:id="priceTextField" />
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label minWidth="80.0" text="Discount (%):" />
                    <TextField fx:id="discountTextField" />
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label minWidth="80.0" text="Color:" />
                    <ColorPicker fx:id="colorPicker" />
                </HBox>
                <HBox alignment="CENTER" spacing="10" VBox.vgrow="ALWAYS">
                    <VBox.margin><Insets top="10" /></VBox.margin>
                    <Button fx:id="saveButton" mnemonicParsing="false" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="Save Changes" />
                    <Button fx:id="cancelButton" mnemonicParsing="false" text="Cancel" />
                </HBox>
            </children>
        </VBox>

        <Label fx:id="saleBadge" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-padding: 3 8 3 8; -fx-background-radius: 5;" text="SALE" visible="false" StackPane.alignment="TOP_RIGHT">
            <StackPane.margin>
                <Insets right="8" top="8" />
            </StackPane.margin>
        </Label>
    </children>
</StackPane>