<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.OrderController" style="-fx-background-color: #f8f9fa;" prefWidth="800.0" prefHeight="700.0" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
    <content>
        <VBox style="-fx-background-color: #f8f9fa; -fx-spacing: 20;" prefWidth="780.0">
            <children>
                <!-- Header Section -->
                <VBox style="-fx-background-color: #ffffff; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                    <children>
                        <HBox alignment="CENTER_LEFT">
                            <children>
                                <Label text="📋">
                                    <font>
                                        <Font size="28.0" />
                                    </font>
                                    <HBox.margin>
                                        <Insets right="10.0" />
                                    </HBox.margin>
                                </Label>
                                <Label text="Place Your Order" textFill="#2c3e50">
                                    <font>
                                        <Font name="System Bold" size="28.0" />
                                    </font>
                                </Label>
                            </children>
                            <padding>
                                <Insets bottom="20.0" left="25.0" right="25.0" top="25.0" />
                            </padding>
                        </HBox>
                    </children>
                    <VBox.margin>
                        <Insets left="30.0" right="30.0" top="25.0" />
                    </VBox.margin>
                </VBox>

                <!-- Delivery Method Section (First thing on page) -->
                <VBox style="-fx-background-color: #ffffff; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                    <children>
                        <Label text="Delivery Method" textFill="#34495e">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                            <VBox.margin>
                                <Insets bottom="15.0" left="25.0" right="25.0" top="20.0" />
                            </VBox.margin>
                        </Label>

                        <VBox spacing="15.0">
                            <children>
                                <RadioButton fx:id="deliveryRadio" text="🚚 Home Delivery" textFill="#2c3e50" style="-fx-font-size: 16px; -fx-font-weight: bold;">
                                    <font>
                                        <Font size="16.0" />
                                    </font>
                                </RadioButton>
                                <RadioButton fx:id="pickupRadio" text="🏪 Store Pickup" textFill="#2c3e50" style="-fx-font-size: 16px; -fx-font-weight: bold;">
                                    <font>
                                        <Font size="16.0" />
                                    </font>
                                </RadioButton>
                            </children>
                            <VBox.margin>
                                <Insets bottom="20.0" left="30.0" right="30.0" />
                            </VBox.margin>
                        </VBox>
                    </children>
                    <VBox.margin>
                        <Insets left="30.0" right="30.0" top="15.0" />
                    </VBox.margin>
                </VBox>

                <!-- Store Location Section (Visible for Pickup only) -->
                <VBox fx:id="storeLocationSection" style="-fx-background-color: #ffffff; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);" visible="true" managed="true">
                    <children>
                        <Label text="Select Store Location" textFill="#34495e">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                            <VBox.margin>
                                <Insets bottom="15.0" left="25.0" right="25.0" top="20.0" />
                            </VBox.margin>
                        </Label>

                        <HBox alignment="CENTER_LEFT">
                            <children>
                                <Label text="Store:" textFill="#2c3e50" minWidth="120.0">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <ChoiceBox fx:id="storeLocationChoice" prefWidth="300.0" style="-fx-background-radius: 8; -fx-border-color: #bdc3c7; -fx-border-radius: 8;" />
                            </children>
                            <VBox.margin>
                                <Insets bottom="20.0" left="30.0" right="30.0" />
                            </VBox.margin>
                        </HBox>
                    </children>
                    <VBox.margin>
                        <Insets left="30.0" right="30.0" top="15.0" />
                    </VBox.margin>
                </VBox>

                <!-- Delivery Date and Time Section (Always visible when delivery is selected) -->
                <VBox style="-fx-background-color: #ffffff; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                    <children>
                        <Label text="Delivery Schedule" textFill="#34495e">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                            <VBox.margin>
                                <Insets bottom="15.0" left="25.0" right="25.0" top="20.0" />
                            </VBox.margin>
                        </Label>

                        <!-- Delivery Date and Time -->
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                            <children>
                                <Label text="📅 Delivery Date:" textFill="#2c3e50" minWidth="140.0">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <DatePicker fx:id="deliveryDatePicker" prefWidth="200.0" style="-fx-background-radius: 8; -fx-border-color: #bdc3c7; -fx-border-radius: 8;" />
                                <Label text="⏰ Hour:" textFill="#2c3e50" minWidth="60.0">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                    <HBox.margin>
                                        <Insets left="20.0" />
                                    </HBox.margin>
                                </Label>
                                <Spinner fx:id="deliveryHourSpinner" prefWidth="80.0" style="-fx-background-radius: 8; -fx-border-color: #bdc3c7; -fx-border-radius: 8;" />
                            </children>
                            <VBox.margin>
                                <Insets bottom="20.0" left="30.0" right="30.0" />
                            </VBox.margin>
                        </HBox>
                    </children>
                    <VBox.margin>
                        <Insets left="30.0" right="30.0" top="15.0" />
                    </VBox.margin>
                </VBox>

                <!-- Delivery Details Section (Only delivery address and recipient info) -->
                <VBox fx:id="deliveryDetailsSection" style="-fx-background-color: #ffffff; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);" visible="false" managed="false">
                    <children>
                        <Label text="Delivery Details" textFill="#34495e">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                            <VBox.margin>
                                <Insets bottom="15.0" left="25.0" right="25.0" top="20.0" />
                            </VBox.margin>
                        </Label>

                        <!-- Delivery Address -->
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                            <children>
                                <Label text="🏠 Delivery Address:" textFill="#2c3e50" minWidth="140.0">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="deliveryAddressField" promptText="Enter delivery address" prefWidth="400.0" style="-fx-background-radius: 8; -fx-border-color: #bdc3c7; -fx-border-radius: 8; -fx-padding: 8;" />
                            </children>
                            <VBox.margin>
                                <Insets bottom="15.0" left="30.0" right="30.0" />
                            </VBox.margin>
                        </HBox>

                        <!-- Recipient Details Section -->
                        <VBox spacing="15.0">
                            <children>
                                <!-- Different Recipient Option -->
                                <VBox spacing="10.0">
                                    <children>
                                        <CheckBox fx:id="differentRecipientCheck" text="Different recipient for delivery" textFill="#2c3e50">
                                            <font>
                                                <Font size="14.0" />
                                            </font>
                                        </CheckBox>

                                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                                            <children>
                                                <Label text="📱 Recipient Phone:" textFill="#2c3e50" minWidth="140.0">
                                                    <font>
                                                        <Font name="System Bold" size="14.0" />
                                                    </font>
                                                </Label>
                                                <TextField fx:id="recipientPhoneField" promptText="Enter recipient's phone number" prefWidth="250.0" style="-fx-background-radius: 8; -fx-border-color: #bdc3c7; -fx-border-radius: 8; -fx-padding: 8;" />
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </children>
                            <VBox.margin>
                                <Insets left="30.0" right="30.0" />
                            </VBox.margin>
                        </VBox>
                    </children>
                    <VBox.margin>
                        <Insets bottom="20.0" left="30.0" right="30.0" top="15.0" />
                    </VBox.margin>
                </VBox>

                <!-- Order Note Section (Always visible) -->
                <VBox style="-fx-background-color: #ffffff; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                    <children>
                        <Label text="Order Note (Optional)" textFill="#34495e">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                            <VBox.margin>
                                <Insets bottom="15.0" left="25.0" right="25.0" top="20.0" />
                            </VBox.margin>
                        </Label>

                        <HBox alignment="TOP_LEFT" spacing="15.0">
                            <children>
                                <Label text="📝 Note:" textFill="#2c3e50" minWidth="140.0">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <TextArea fx:id="orderNoteField" promptText="Add any special instructions or notes for your order..." prefWidth="500.0" prefHeight="80.0" style="-fx-background-radius: 8; -fx-border-color: #bdc3c7; -fx-border-radius: 8; -fx-padding: 8;" wrapText="true" />
                            </children>
                            <VBox.margin>
                                <Insets bottom="20.0" left="30.0" right="30.0" />
                            </VBox.margin>
                        </HBox>
                    </children>
                    <VBox.margin>
                        <Insets left="30.0" right="30.0" top="15.0" />
                    </VBox.margin>
                </VBox>

                <!-- Payment Method Section -->
                <VBox style="-fx-background-color: #ffffff; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                    <children>
                        <Label text="Payment Method" textFill="#34495e">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                            <VBox.margin>
                                <Insets bottom="15.0" left="25.0" right="25.0" top="20.0" />
                            </VBox.margin>
                        </Label>

                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                            <children>
                                <Label text="💳 Payment:" textFill="#2c3e50" minWidth="140.0">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <ChoiceBox fx:id="paymentMethodChoice" prefWidth="200.0" style="-fx-background-radius: 8; -fx-border-color: #bdc3c7; -fx-border-radius: 8;" />

                                <!-- Display current order total -->
                                <Label fx:id="orderTotalLabel" text="Total: ₪0.00" textFill="#2c3e50">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                            </children>
                            <VBox.margin>
                                <Insets bottom="15.0" left="30.0" right="30.0" />
                            </VBox.margin>
                        </HBox>

                        <!-- Budget Info -->
                        <HBox alignment="CENTER_LEFT" spacing="15.0" visible="false" managed="false" fx:id="budgetBox">
                            <children>
                                <Label fx:id="budgetBalanceLabel" text="Budget Balance: ₪0.00" textFill="#2c3e50">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <Button fx:id="useBudgetButton" text="Use Budget" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 5 15 5 15; -fx-cursor: hand;" />
                            </children>
                            <VBox.margin>
                                <Insets bottom="15.0" left="30.0" right="30.0" />
                            </VBox.margin>
                        </HBox>

                        <!-- New Card Input Section -->
                        <VBox fx:id="newCardBox" spacing="10.0" visible="false" managed="false">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="15.0">
                                    <children>
                                        <Label text="🔢 Card Number:" textFill="#2c3e50" minWidth="140.0">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </Label>
                                        <TextField fx:id="newCardField" promptText="Enter new card number" prefWidth="250.0" style="-fx-background-radius: 8; -fx-border-color: #bdc3c7; -fx-border-radius: 8; -fx-padding: 8;" />
                                    </children>
                                </HBox>
                            </children>
                            <VBox.margin>
                                <Insets bottom="20.0" left="30.0" right="30.0" />
                            </VBox.margin>
                        </VBox>
                    </children>
                    <VBox.margin>
                        <Insets left="30.0" right="30.0" top="15.0" />
                    </VBox.margin>
                </VBox>


                <!-- Action Buttons Section -->
                <VBox style="-fx-background-color: #ffffff; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                    <children>
                        <HBox alignment="CENTER" spacing="30.0">
                            <children>
                                <Button fx:id="cancelButton" text="← Cancel" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 10; -fx-padding: 15 25 15 25; -fx-cursor: hand; -fx-font-weight: bold;" textFill="WHITE" prefWidth="150.0">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Button>

                                <Button fx:id="placeOrderButton" text="🎯 Place Order" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 10; -fx-padding: 15 30 15 30; -fx-cursor: hand; -fx-font-weight: bold;" textFill="WHITE" prefWidth="180.0">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Button>
                            </children>
                            <VBox.margin>
                                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
                            </VBox.margin>
                        </HBox>
                    </children>
                    <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
                    </VBox.margin>
                </VBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </content>
</ScrollPane>