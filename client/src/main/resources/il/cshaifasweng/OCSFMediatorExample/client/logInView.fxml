<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.LoginControl">
    <children>
        <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #f4f4f9;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>
            <children>
                <Label text="Welcome Back" textFill="#333333">
                    <font>
                        <Font name="System Bold" size="28.0" />
                    </font>
                </Label>
                <VBox spacing="10.0">
                    <children>
                        <Label text="Username" textFill="#555555">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="usernameField" prefHeight="40.0" promptText="Enter your username" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #cccccc;">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </TextField>
                    </children>
                </VBox>
                <VBox spacing="10.0">
                    <children>
                        <Label text="Password" textFill="#555555">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <StackPane>
                            <children>
                                <PasswordField fx:id="passwordField" prefHeight="40.0" promptText="Enter your password" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #cccccc;">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </PasswordField>
                                <TextField fx:id="visiblePasswordField" managed="false" prefHeight="40.0" promptText="Enter your password" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #cccccc;" visible="false">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </TextField>
                                <ToggleButton fx:id="togglePasswordButton" mnemonicParsing="false" style="-fx-background-color: transparent; -fx-cursor: hand;"  StackPane.alignment="CENTER_RIGHT">
                                    <StackPane.margin>
                                        <Insets right="10.0" />
                                    </StackPane.margin>
                                </ToggleButton>
                            </children>
                        </StackPane>
                    </children>
                </VBox>
                <Label fx:id="errorLabel" managed="false" textFill="#d32f2f" visible="false" wrapText="true">
                    <font>
                        <Font name="System Italic" size="12.0" />
                    </font>
                </Label>
                <VBox alignment="CENTER" spacing="10.0">
                    <children>
                        <ProgressIndicator fx:id="loadingIndicator" prefHeight="30.0" prefWidth="30.0" visible="false" />
                        <Button fx:id="loginButton" defaultButton="true" mnemonicParsing="false" onAction="#handleLogin" prefHeight="40.0" prefWidth="320.0" style="-fx-background-color: #5e35b1; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand;" text="Login">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Button>
                    </children>
                </VBox>
                <HBox alignment="CENTER" spacing="5.0">
                    <children>
                        <Label text="Don't have an account?" textFill="#777777">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Label>
                        <Button fx:id="registerButton" mnemonicParsing="false" onAction="#handleRegister" style="-fx-background-color: transparent; -fx-text-fill: #5e35b1; -fx-cursor: hand; -fx-underline: true;" text="Register">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>