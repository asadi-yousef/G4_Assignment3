<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="il.cshaifasweng.OCSFMediatorExample.client.ComplaintsListController"
      spacing="15" alignment="TOP_CENTER"
      style="-fx-background-color: #f4f6f8; -fx-padding: 20;">

    <Label text="Complaints Dashboard"
           style="-fx-font-size: 22px; -fx-font-weight: bold;" />

    <TableView fx:id="complaintsTable" prefHeight="400" prefWidth="700">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
            <TableColumn fx:id="customerColumn" text="Customer" prefWidth="150"/>
            <TableColumn fx:id="orderColumn" text="Order" prefWidth="100"/>
            <TableColumn fx:id="textColumn" text="Complaint" prefWidth="250"/>
            <TableColumn fx:id="deadlineColumn" text="Deadline" prefWidth="150"/>
            <TableColumn fx:id="resolvedColumn" text="Resolved" prefWidth="100"/>
        </columns>
    </TableView>

    <Button text="Mark as Resolved"
            onAction="#handleResolve"
            style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-background-radius: 8;" />

    <Button text="â† Back"
            onAction="#handleBack"
            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 8;" />
</VBox>

